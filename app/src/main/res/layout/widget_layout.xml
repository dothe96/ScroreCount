<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/levels_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Levels none"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"/>
        <ProgressBar
            android:id="@+id/activeProgress"
            style="@style/BarStyle"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:indeterminate="false"/>
        <TextView
            android:id="@+id/updated_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How was your day?"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/btn_range"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_down"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_down_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_normal"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_up"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_up_arrow"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>